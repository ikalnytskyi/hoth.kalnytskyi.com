[NetDev]
Name={{ wireguard_device_name }}
Kind=wireguard
Description={{ wireguard_device_name }} - wireguard tunnel

[WireGuard]
ListenPort={{ wireguard_port }}
PrivateKeyFile={{ wireguard_private_key_path }}

{% for peer in wireguard_peers %}
[WireGuardPeer]
AllowedIPs={{ peer.ip_address }}/32
PublicKey={{ peer.public_key }}
{% endfor %}
